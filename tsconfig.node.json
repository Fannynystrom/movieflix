{
  "compilerOptions": {
    "target": "es2022", // Använd ES2022 som target
    "lib": ["es2022"], // Ändra från ESNext till ES2022
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Om du arbetar med Node.js kan det vara bättre att använda "node"
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
